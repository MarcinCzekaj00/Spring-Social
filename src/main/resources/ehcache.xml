<config xmlns ='http://www.ehcache.org/v3'
        xmlns:xsi ="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jsr107 ="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation ="http://www.ehcache.org/v3
https://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="default">
        <expiry>
            <ttl unit="hours">1</ttl>
        </expiry>
        <heap unit="entries">5000</heap>
    </cache-template>

    <cache alias="getPosts" uses-template="default"/>
    <cache alias="getPostsWithComments" uses-template="default"/>
    <cache alias="getSinglePost" uses-template="default"/>


    <cache alias="editPost" uses-template="default"/>
    <cache alias="editSinglePost" uses-template="default"/>


    <cache alias="deletePost" uses-template="default"/>


    <cache alias="getComments" uses-template="default"/>
    <cache alias="getCommentsFromPost" uses-template="default"/>
    <cache alias="getSingleComment" uses-template="default"/>
    <cache alias="addComment" uses-template="default"/>
    <cache alias="editComment" uses-template="default"/>
    <cache alias="editSingleComment" uses-template="default"/>
    <cache alias="deleteComment" uses-template="default"/>

    <cache alias="getDetails" uses-template="default"/>
    <cache alias="getSingleDetails" uses-template="default"/>
    <cache alias="editDetails" uses-template="default"/>
    <cache alias="deleteDetails" uses-template="default"/>






</config>